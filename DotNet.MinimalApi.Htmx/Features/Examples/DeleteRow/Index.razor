@using DotNet.MinimalApi.Htmx.Data
@layout MainLayout

<PageTitle>Delete Row</PageTitle>
<h1>Delete Row</h1>

<div>
   
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Active</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody hx-confirm="Are you sure?" hx-target="closest tr" hx-swap="outerHTML swap:1s">
            @foreach(var contact in Contacts)
            {
                <tr>
                    <td>
                        <span>@contact.Name</span>
                    </td>
                    <td>    
                        <span>@contact.Email</span>
                    </td>
                    <td>    
                        <span>@contact.Active</span>
                    </td>
                    <td>
                        <button class="btn btn-danger" hx-delete=@($"/examples/deleterow/{contact.Id}")>Delete</button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
</div>

@code {

    [Parameter] 
    public IEnumerable<Contact> Contacts { get; set; } = new List<Contact>();
}
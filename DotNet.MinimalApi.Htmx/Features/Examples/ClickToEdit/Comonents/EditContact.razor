@using DotNet.MinimalApi.Htmx.Data
<form hx-post="Examples/ClickToEdit/EditContact/@Contact.Id" hx-target="this" hx-swap="outerHTML">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Contact.Name" />
    </div>
    <div class="form-group">
        <label for="Email" >Email</label>
        <input type="text" class="form-control" id="Email" name="Email" value="@Contact.Email" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>&nbsp;<button class="btn btn-danger" hx-get="Examples/ClickToEdit/@Contact.Id">Cancel</button>
    </div>
    <input type="hidden" id="Id" name="Id" value="@Contact.Id"/>
    <HtmxAntiforgeryToken />
</form>

@code {
    [Parameter] public Contact Contact { get; set; } = new();
}